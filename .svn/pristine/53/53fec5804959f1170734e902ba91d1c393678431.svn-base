@use 'pdfViewer';
.outerContainer {
  width: 100%;
  height: 100%;
  position: relative;
}

.outerContainer .mainContainer {
  position: absolute;
  inset: 0;
}

.outerContainer .mainContainer .viewerContainer {
  overflow: auto;
  position: absolute;
  inset: 0;
  outline: none;
}

.outerContainer .mainContainer .viewerContainer .pdfViewer .d-page {
  width: 100%;
  height: 100%;
  position: relative;
}

.outerContainer .mainContainer .viewerContainer .pdfViewer .d-page .page {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  border: none;
}

.outerContainer .mainContainer .viewerContainer .pdfViewer .d-page .page .canvasWrapper canvas {
  width: 100%;
  height: 100%;
}

.thumbnail {
  overflow: hidden !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
}

.thumbnail .status-icon {
  display: flex;
  justify-content: center;
  align-items: center;
}

.d-page + .d-page {
  margin-top: 10px;
}

.status-icon {
  position: absolute;
  z-index: 5;
  width: 100%;
  height: 100%;
}
